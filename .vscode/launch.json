    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "sudo": true
        },
        {
            "name": "stress_test_dumbbell",
            "type": "debugpy",
            "request": "launch",
            "program": "test_gbps_traffic.py",
            "console": "integratedTerminal",
            "sudo": true,
        },
        {
            "name": "RUNNER",
            "type": "debugpy",
            "request": "launch",
            "program": "runner.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            // run as a root
            "sudo": true,
            "args": [
                "-t",
                "dumbbell",
                "-n",
                "2",
                "-c",
                "simple_deflection",
                // "-l",
                // "2",
                // "-s",
                // "2",
                "--cli"
            ]
        }
    ]
}