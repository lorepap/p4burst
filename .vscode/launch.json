{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Collection Runner",
            "type": "debugpy",
            "request": "launch",
            "program": "collection_runner.py",
            "console": "integratedTerminal",
            "sudo": true
        },
        {
            "name": "create rl dataset",
            "type": "debugpy",
            "request": "launch",
            "program": "create_rl_dataset.py",
            "console": "integratedTerminal",
            "sudo": true,
            "args": [
                "merge",
                "--rl",
                "tmp/0000-deflection/combined_switch_dataset.csv",
                "--receiver",
                "tmp/0000-deflection/combined_receiver_log.csv",
                "--output",
                "test_merge_dataset.csv"
            ]
        },
        {
            "name": "data collection",
            "type": "debugpy",
            "request": "launch",
            "program": "test_data_collection.py",
            "console": "integratedTerminal",
            "sudo": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--n_pkts",
                "10",
                "--n_flows",
                "1",
                "--n_clients",
                "1"
            ]
        },
        {
            "name": "DT Distillation",
            "type": "debugpy",
            "request": "launch",
            "program": "dt.py",
            "console": "integratedTerminal",
            "args": [
                "--csv",
                "/home/ubuntu/p4burst/tmp/0000-deflection/final_rl_dataset.csv",
                "--samples",
                "10",
                "--model",
                "model/dqn_model.h5"
            ]
        },
        {
            "name": "trainer",
            "type": "debugpy",
            "request": "launch",
            "program": "rl_agent.py",
            "console": "integratedTerminal",
            "args": [
                "--csv",
                "/home/ubuntu/p4burst/tmp/0000-deflection/final_rl_dataset.csv",
                "--epochs",
                "10"
            ]
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "sudo": true,
            "justMyCode": false,
        },
        {
            "name": "stress_test_dumbbell",
            "type": "debugpy",
            "request": "launch",
            "program": "test_gbps_traffic.py",
            "console": "integratedTerminal",
            "sudo": true,
        },
        {
            "name": "RUNNER",
            "type": "debugpy",
            "request": "launch",
            "program": "runner.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "python": "/usr/bin/python",
            // run as a root
            "sudo": true,
            "args": []
        }
    ]
}